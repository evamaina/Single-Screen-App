<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/udacity"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/ico"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/uda"
        android:layout_below="@id/image"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Udacity"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/image"
        android:layout_toRightOf="@id/ico"
        android:paddingLeft="10dp"/>
    <ImageView
        android:id="@+id/call"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/call"
        android:layout_below="@id/ico"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/seattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="650-555-5555"
        android:layout_toRightOf="@id/call"
        android:layout_below="@id/shop"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/darker_gray"/>
    <ImageView
        android:id="@+id/email"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/web6"
        android:layout_below="@id/call"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="www.udacity.com"
        android:layout_toRightOf="@id/email"
        android:layout_below="@id/seattle"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/darker_gray"/>
    <ImageView
        android:id="@+id/house"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:src="@drawable/location"
        android:layout_below="@id/email"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2465 Latham Std,Mountain View, CA 94043"
        android:layout_toRightOf="@id/house"
        android:layout_below="@id/location"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Udacity Believes Together We Can!"
        android:layout_below="@id/house"
        android:textSize="26sp"
        android:padding="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"/>






</RelativeLayout>